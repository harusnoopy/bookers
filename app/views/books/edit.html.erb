<%= form_with model: @book do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>
<% end %>